{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,

        "esModuleInterop": true,
        "lib": ["es6", "dom"],
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node12",

        "rootDir": "src",
        "outDir": "dist",
        "include": ["src/**/*.{ts,tsx,d.ts}"]
    }
}
