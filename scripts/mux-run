#!/bin/sh

proj="$PWD"

case "$proj" in
*theCourseForum2*)
  # docker compose up --build
  cmd='docker compose up'
  ;;
*atlas* | *tinyground*)
  cmd='pnpm run dev'
  ;;
*interview-prep*)
  cmd='pnpm run dev'
  ;;
*neovim*)
  cmd='make'
  ;;
*cses* | *usaco* | *codeforces*)
  cmd='python solution.py < input.txt'
  ;;
*dwmb* | *st* | *dmenu* | *dwm*)
  cmd='make install clean'
  ;;
esac

echo " > $cmd" | sed "s|$HOME|~|g"
eval "$cmd"
