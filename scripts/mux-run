#!/bin/sh

proj="$PWD"

case "$(basename "$proj")" in
dmenu | dwm | st)
    cmd='make clean install && make clean'
    ;;
dwmb)
    cmd='make clean install && make clean && killall dwmb && dwmb &'
    ;;
theCourseForum2)
    # docker compose up --build
    cmd='docker compose up'
    ;;
*)
    echo "Project '$proj' unknown."
    exit
    ;;
esac

echo " > $cmd" | sed "s|$HOME|~|g"
eval "$cmd"
