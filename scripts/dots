#!/bin/sh

cfg="$HOME/Desktop/dots"

cd "$cfg" || exit

linux() {
    rmb .git misc wip ssh readme.md .

    cp -r "$SCRIPTS" .

    test -d ~/.local/share/fonts && cp -r ~/.local/share/fonts .

    for e in git nvim python rg sioyek templates tmux yarn zsh; do
        cp -r "$XDG_CONFIG_HOME/$e" .
    done
    test -f "$XDG_DATA_HOME/nvim/lazy-lock.json" && cp "$XDG_DATA_HOME/nvim/lazy-lock.json" nvim

    rmb config yarn
    yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config" global list | rg --no-config -o '".*"' | sed 's/"//g' >yarn/pkg
    rm -rf nvim/undo
    rmb .zshrc .zprofile .zaliases zsh
    rmb tmux.conf tmux
}

mac() {
    rmb .git readme.md linux .
    cp -r "$SCRIPTS" .

    brew list >pkg

    for e in git fd karabiner kitty npm nvim python rg sioyek templates yarn zsh; do
        cp -r "$XDG_CONFIG_HOME/$e" .
    done

    test -f "$XDG_DATA_HOME/nvim/lazy-lock.json" && cp "$XDG_DATA_HOME/nvim/lazy-lock.json" nvim
    test -f "$XDG_DATA_HOME/nvim/spell.encoding.add" && cp "$XDG_DATA_HOME/nvim/spell.encoding.add" nvim

    test -f nvim/todo.txt && rm nvim/todo.txt

    mkdir tmux
    cp "$XDG_CONFIG_HOME/tmux/tmux.conf" tmux

    rmb config yarn
    yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config" global list 2>/dev/null | rg --no-config -o '".*"' | sed 's/"//g' >yarn/pkg
    rm -rf nvim/undo
    rmb .zshrc .zprofile .zaliases zsh
    rmb karabiner.json karabiner
}

type brew >/dev/null && mac || linux
