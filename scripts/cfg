#!/bin/sh

cfg="$HOME/dev/config"

rmb .git install.zsh "$cfg"

cp -r "$SCRIPTS" "$cfg"

for e in git nvim tmux stylua X11 zathura zsh; do
    cp -r "$XDG_CONFIG_HOME/$e" "$cfg"
done

rm -rf "$cfg/nvim/undo"

rmb .zshrc .zprofile .zaliases "$cfg/zsh"
cp /etc/zsh/zshenv "$cfg/zsh"

[ "$1" ] || exit

cd "$cfg" || exit 1
git add .
git commit -m "$*"
git push
