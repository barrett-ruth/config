#!/bin/sh

[ "$1" ] || exit 1

last="$(eval "echo \$$(echo $#)")"

if [ -d "$last" ] && [ ! "$#" = '1' ]; then
    cd "$last" || exit 1
elif [ ! -d "$last" ] && [ ! -f "$last" ]; then
    exit 1
fi

args="$*"
for e in .[!.]* *; do
    case "$args" in
    *"$e"*) continue ;;
    esac
    rm -rf "$e"
done
