#!/bin/sh

[ "$1" ] || exit

filename="$1"
extension="${filename##*.}"

case "$extension" in
c)
  cmd="clang $filename"
  run='./a.out'
  clean='[ -f a.out ] && rm a.out'
  ;;
cpp | cc)
  cmd="clang++ $filename"
  run='./a.out'
  clean='[ -f a.out ] && rm a.out'
  ;;
sh)
  cmd="sh $filename"
  ;;
ts)
  cmd="ts-node $filename"
  ;;
js)
  cmd="node $filename"
  ;;
py)
  cmd="python3 $filename"
  ;;
esac

echo " > $cmd" | sed "s|$HOME|~|g"

if [ "$run" ]; then
    cmd="$cmd && $run"
fi

eval "$cmd"

if [ "$clean" ]; then
  eval "$clean"
fi
