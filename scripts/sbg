#!/bin/sh

wps="$HOME/wp"

[ "$(xrandr | rg ' connected ' | wc -l)" -gt 1 ] && dir_one="$wps/one" && dir_two="$wps/two" || dir_one="$wps"

[ "$1" ] && one="$1" || one="$(fd --type file . "$dir_one" | shuf -n 1)"
if [ "$2" ]; then
    two="$2"
else
    [ -f "$dir_two/$(basename "$one")" ] && two="$dir_two/$(basename "$one")" || two="$(fd --type file . "$dir_two" | shuf -n 1)"
fi

setroot -z "$one" -z "$two"
