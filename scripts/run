#!/bin/sh

[ "$1" ] || exit

proj="$1"

case "$(basename "$proj")" in
barrett-ruth.github.io)
    cmd='chromium --new-window index.html'
    ;;
dmenu | dwm | st)
    cmd='make clean install; make clean'
    ;;
dwmb)
    cmd='make clean install; make clean; killall dwmb; dwmb &'
    ;;
Homework*)
    cmd='java src/*.java'
    ;;
*)
    if [ "$(ls ./*.tex)" ]; then
        cmd='latexmk -pvc *.tex'
    else
        echo "Project '$proj_name' unknown."
        exit
    fi
    ;;
esac

echo " > $cmd" | sed "s|$HOME|~|g"
eval "$cmd"
