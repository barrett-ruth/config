#!/bin/sh

attach_or_restore() {
    [ "$(pgrep tmux)" ] || cmd='start\; run ~/.config/tmux/tmux-resurrect/scripts/restore.sh\; '

    eval "tmux $cmd"a 2>/dev/null || tmux
}

[ "$1" ] || attach_or_restore

case "$1" in
bar)
    bar="$(tmux ls -F '#S' | nl -w1 -v0 -s ':' | paste -sd '|' | sed "s/|/#[fg=white] â”‚ #[fg=#928374]/g;s/$2/$2*/")"
    echo "#[fg=#928374]$bar"
    ;;
git | run)
    [ "$(tmux lsw -F '#W' | rg "$1")" ] && tmux selectw -t "$1" || tmux neww -c '#{pane_current_path}' -n "$1"

    cmd="mux-$1 \$(pwd)"

    tmux send -t "$1" "cd $2" 'enter' 'C-l' "$cmd" 'enter'
    ;;
switch)
    mux-switch "$2"
    ;;
esac
