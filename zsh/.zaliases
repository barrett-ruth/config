#!/usr/bin/env zsh

# Make commands respect aliases
alias ds='doas '
mn() {
    page="$(ls -la "$(which "$1")" 2>/dev/null)"
    [[ -n "$page" ]] && page="${page##*/}" || page="$1"
    man "$page"
}

# Color aliases
alias ls='exa'
alias l='ls -a --color=auto --group-directories-first'
alias ll='l -lF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

# Basic programs
alias bk='bindkey'
alias clc='calcurse'
alias g='git'
alias dk='docker'
alias ka='killall'
alias mp='makepkg'
alias nv='nvim'
alias nvh='nvim config.h'
alias pe='printenv'
alias py='python'
alias qb='qutebrowser'
alias sctl='systemctl'
alias jctl='journalctl'
alias sy='sioyek'
alias tm='tmux'
alias za='zathura --fork'

# Make
alias mk='make'
alias mkc='make clean'
alias mkcic='make clean install && make clean'
alias mku='make uninstall'

# Pacman
alias pm='pacman'
alias pmqg='pacman -Q | rg'

# Yarn
y() {
    yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config" "$@"
    test -f "$HOME/.yarnrc" && rm "$HOME/.yarnrc"
}
yg() { y global "$@"; }

# Misc
alias cp='cp -v'
gcl() { . _gcl "$@" }
rmd() { [ "$1" = "$HOME" ] || rm -rf "$@"; }
alias mkd='mkdir -pv'
mkcd() { mkdir -pv "$1" && cd "$1"; }
z() { . _z "$@"; }
declare -A dirs=(['']=~ [scr]="$SCRIPTS" [cfg]=~/.config [nv]=~/.config/nvim [qb]=~/.config/qutebrowser [tm]=~/.config/tmux [x11]=~/.config/X11 [zsh]=~/.config/zsh [dev]=~/dev [wp]=~/wp [git]=~/dev/learning-git [py]=~/dev/learning-python [site]=~/dev/barrett-ruth.github.io [paq]=~/.local/share/nvim/site/pack/paqs/start)
for e in ~/dev/* ~/dev/sl/*; do
    [[ -d "$e" ]] && dirs[$(basename "$e")]="$e"
done
