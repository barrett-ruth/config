#!/usr/bin/env zsh

# Make commands respect aliases
alias ds='doas '
alias mn='man '
alias pls='ds !!'

# Color aliases
alias ls='exa'
alias l='ls -a --color=auto --group-directories-first'
alias ll='l -lF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

# Basic programs
alias g='git'
alias ka='killall'
alias nv='nvim'
alias py='python'
alias rn='rename'
alias sctl='systemctl'
alias tm='tmux'
alias za='zathura --fork'
alias zc='z -c'
alias zz='cd --'

# Make
alias mk='make'
alias mkc='mk clean'
alias mki='mk install'
alias mkci='mkc install'
alias mkcic='mkci && mkc'
alias mku='mk uninstall'

# Pacman
alias pm='pacman'
alias pmq='pm -Q'
alias pmqg='pmq | rg'

# Misc
alias cp='cp -v'
alias cpd='cp -r'
alias rm='rm'
rmd() { [ "$1" = "$HOME" ] || rm -rf "$*"; }
alias mkd='mkdir -pv'
mkcd() {
    mkdir -vp "$1"
    cd "$1"
}
alias mkv='python -m venv venv; srcv; pip3 install --upgrade pip >/dev/null'
alias rmv='deactivate 2>/dev/null; rm -rf venv'
alias srcv='test -f venv/bin/activate && . venv/bin/activate'
alias nvh='nvim config.h'
alias rst='exec zsh -l'
