#!/usr/bin/env zsh

# Make commands respect aliases
alias ds='doas '
mn() {
    page="$(ls -la "$(which "$1")" 2>/dev/null)"
    [[ -n "$page" ]] && page="${page##*/}" || page="$1"
    man "$page"
}

# Color aliases
alias ls='exa'
alias l='ls -a --color=auto --group-directories-first'
alias ll='l -lF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

# Basic programs
alias g='git'
alias dk='docker'
alias ka='killall'
alias mp='makepkg'
alias nv='nvim'
alias nvh='nvim config.h'
alias nvt='nvim ~/todo.txt'
alias perg='printenv | rg'
alias py='python'
alias sctl='systemctl'
alias jctl='journalctl'
alias rs="rsync -e 'ssh -F $HOME/.config/ssh/config'"
alias ssh='ssh -F ~/.config/ssh/config'
alias sy='sioyek'
alias tm='tmux'
alias tcli='transmission-cli'
alias trem='transmission-remote'

# Make
alias mk='make'
alias mkc='make clean'
alias mkcic='mkc install && make clean'
alias mku='mk uninstall'

# Pacman
alias pm='pacman'
alias pmqg='pacman -Q | rg'

# Yarn
y() {
    yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config" "$@"
    test -f "$HOME/.yarnrc" && rm "$HOME/.yarnrc"
}
yg() { y global "$@"; }

# Misc
alias clrhist='echo > $HISTFILE'
alias cp='cp -v'
gcl() { . _gcl "$@" }
rmd() { [[ "$1" == "$HOME" ]] || rm -rf "$@"; }
alias mkd='mkdir -pv'
mkcd() { mkdir -pv "$1" && cd "$1"; }
alias psag='ps aux | rg'
z() { . _z "$@"; }
declare -A dirs=(['']=~ [scr]="$SCRIPTS" [dev]=~/dev [dots]=~/dev/dots [cp]=~/dev/cp [dsa1]=~/dev/uva/dsa1 [nv]=~/.config/nvim [paq]=~/.local/share/nvim/site/pack/paqs/start [tm]=~/.config/tmux [x11]=~/.config/X11 [zsh]=~/.config/zsh [py]=~/dev/learning-python [site]=~/dev/barrett-ruth.github.io [sl]=~/dev/sl)
-() { cd - >/dev/null; }
for e in ~/dev/sl/*; do
    [[ -d "$e" ]] && dirs[$(basename "$e")]="$e"
done
