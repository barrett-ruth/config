#!/usr/bin/env zsh

# Make commands respect aliases
alias ds='doas '
alias mn='man '

# Color aliases
alias ls='exa'
alias l='ls -a --color=auto --group-directories-first'
alias ll='l -lF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

# Basic programs
alias bk='bindkey'
alias g='git'
alias ka='killall'
alias nv='nvim'
alias nvh='nvim config.h'
alias pe='printenv'
alias py='python'
alias qb='qutebrowser'
alias sctl='systemctl'
alias jctl='journalctl'
alias tm='tmux'

# Make
alias mk='make'
alias mkc='make clean'
alias mkcic='make clean install && make clean'
alias mku='make uninstall'

# Pacman
alias pm='pacman'
alias pmqg='pacman -Q | rg'

# Misc
alias cp='cp -v'
gcl() { . _gcl "$@" }
alias int='ping -c 3 archlinux.org'
rmd() { [ "$1" = "$HOME" ] || rm -rf "$*"; }
alias mkd='mkdir -pv'
mkcd() { mkdir -pv "$1" && cd "$1"; }
z() { . _z "$@"; }
declare -A dirs=(['']="$HOME" [cfg]="$XDG_CONFIG_HOME" [nv]="$XDG_CONFIG_HOME/nvim" [qt]="$XDG_CONFIG_HOME/qutebrowser" [tm]="$XDG_CONFIG_HOME/tmux" [x11]="$XDG_CONFIG_HOME/X11" [zsh]="$XDG_CONFIG_HOME/zsh" [dev]="$HOME/dev/sl")
for e in ~/dev/* ~/dev/sl/*; do
    [[ -d "$e" ]] && dirs[$(basename "$e")]="$e"
done
