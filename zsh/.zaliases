#!/usr/bin/env zsh

# Make commands respect aliases
alias ds='doas '
alias mn='man '

# Color aliases
alias ls='exa'
alias l='ls -a --color=auto --group-directories-first'
alias ll='l -lF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

# Basic programs
alias g='git'
alias ka='killall'
alias nv='nvim'
alias py='python'
alias sctl='systemctl'
alias jctl='journalctl'
alias tm='tmux'
alias za='zathura --fork'

# Make
alias mk='make'
alias mkcic='make clean install && make clean'
alias mku='make uninstall'

# Pacman
alias pm='pacman'
alias pmqg='pacman -Q | rg'

# Misc
alias cp='cp -v'
rmd() { [ "$1" = "$HOME" ] || rm -rf "$*"; }
alias mkd='mkdir -pv'
mkcd() {
    mkdir -pv "$1"
    cd "$1"
}
