#!/usr/bin/env zsh

# Color aliases
exists eza && alias ls='eza'
alias l='ls --color=auto --group-directories-first'
alias ll='l -alF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

exists dosa && alias ds='doas'
exists pacman && alias pm='pacman'

# Basic programs
exists docker alias dk='docker'
exists git && alias g='git'
exists nvim && alias nv='nvim'
alias pe='printenv'

# Misc
mkcd() { mkdir -p "$@"; cd "$@"; }
alias psa='ps aux'
j() { . _j "$@"; }
