#!/bin/sh
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

skb &
smon &
sbg 'nature/sierra.jpg' &
xmodmap "$XDG_CONFIG_HOME/X11/xmodmap" &
xrdb -merge "$XDG_CONFIG_HOME/X11/xresources" &
xset r rate 300 50 &
xset m 0 0 &
dwmblocks &
while true; do
    dwm
    continue || exit
done
