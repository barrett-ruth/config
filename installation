grub
    edit /etc/default/grub:
        include ibt=off flag to GRUB_CMDLINE_LINUX_DEFAULT before performing grub-install
dash
    create post-install hook
doas
    permit users and commands in /etc/doas.conf
zsh
    set zsh as shell
    setup /etc/zsh/zshenv:
        deny initial prompt message
        export zdotdir
    install plugins
dots:
nvidia
    add nvidia, nvidia_modeset, nvidia_uvm, nvidia_drm to initramfs
    regenerate mkinitcpio -P
    add nvidia hook
    add nvidia.shutdown to /usr/lib/systemd/system-shutdown to avoid umount /oldroot: device busy
        chmod +x
symlink fd to git in ~/.config
symlink /usr/bin/doas to /usr/bin/sudo (make makepkg use it)
ssh:
    change all to ~/.config/ssh in /etc/ssh/ssh(d)_config
    generate, add github ssh key (remove old)
    make ~/.config/ssh/known_hosts.d
    change all cloned url repos to ssh remote string (should probably do this first)
setroot
    install imlib2
    clone aur repo
    sed -i 's|`imlib2-config --libs`|-lImlib2|g' Makefile
fzf:
    clone
    ./install --xdg --no-update-rc --no-bash --no-fish --key-bindings --completion
    replace all ~/.ssh with ~/.config/ssh
docker:
    if permission errors: usermod -aG docker <user>
